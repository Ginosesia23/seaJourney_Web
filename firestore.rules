
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isVesselManagerOrAdmin(userId) {
      let userProfilePath = /databases/$(database)/documents/users/$(userId);
      return request.auth != null && get(userProfilePath).data.role in ['vessel', 'admin'];
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow list: if isVesselManagerOrAdmin(request.auth.uid);
    }
    
    match /users/{userId}/vessels/{vesselId} {
      allow read, create: if isOwner(userId);
      allow update, delete: if isOwner(userId) && resource.data.ownerId == request.auth.uid;
    }
    
    match /users/{userId}/vessels/{vesselId}/seaService/{serviceId} {
      allow read, list, create, update, delete: if isOwner(userId);
    }

    match /users/{userId}/vessels/{vesselId}/stateLogs/{dateKey} {
      allow read, list, create, update, delete: if isOwner(userId);
    }

    match /verificationRecords/{recordId} {
      allow get: if true;
      allow create: if request.auth != null;
      allow update, delete, list: if false;
    }
  }
}
